{
  "name": "bff",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon -L",
    "start": "node ./dist/server.js",
    "test": "mocha -r ts-node/register ./**/test.ts"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "ts-node ./src/server.ts"
  },
  "keywords": [
    "bff",
    "node"
  ],
  "author": "Bohdan Kovalov <bogdkovalov@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.16.0",
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "nodemon": "^1.18.9"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "axios": "^0.16.2",
    "chai": "^4.2.0",
    "eslint": "^5.10.0",
    "mocha": "^5.2.0",
    "node-mocks-http": "^1.7.3",
    "rxjs": "^6.3.3",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.2.2",
    "typings": "^2.1.1"
  },
  "repository": "https://github.com/dalenguyen/rest-api-node-typescript.git"
}
