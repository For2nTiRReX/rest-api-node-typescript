{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "es6",
        "lib": ["dom", "esnext"],
        "outDir": "./dist",
        "baseUrl": "./src",
        "paths": {
          "config/*": [ "config/*" ],
          "public/*": [ "public/*" ],
        },
        "alwaysStrict": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}